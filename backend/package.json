{
  "name": "administrador-tareas-backend",
  "version": "1.0.0",
  "description": "Backend API para el administrador de tareas",
  "main": "dist/app.js",
  "scripts": {
    "dev": "TZ='America/Bogota' nodemon src/app.ts",
    "dev:enhanced": "ts-node src/scripts/dev.ts",
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "start": "TZ='America/Bogota' node dist/app.js",
    "start:prod": "TZ='America/Bogota' NODE_ENV=production node dist/app.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "papaparse": "^5.4.1",
    "uuid": "^9.0.0",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.11",
    "@types/papaparse": "^5.3.7",
    "@types/uuid": "^9.0.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
